<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="ServiceHostApp.CalcService" behaviorConfiguration="MetadataBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8090/Math"/>
          </baseAddresses>
        </host>

        <!-- Endpointy aplikacyjne -->
        <endpoint address=""
                  binding="basicHttpBinding"
                  contract="Contracts.ICalculator" />
        
        <endpoint address="ws"
          binding="wsHttpBinding"
          bindingConfiguration="WsNoSec"
          contract="Contracts.ICalculator" />

        <!-- Metadata (WSDL/MEX) -->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />
      </service>
    </services>

    <bindings>
      <wsHttpBinding>
        <binding name="WsNoSec">
          <security mode="None" />
        </binding>
      </wsHttpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="MetadataBehavior">
          <!-- WSDL pod GET -->
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8090/Math"/>
          <!-- pomocne w dev -->
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>